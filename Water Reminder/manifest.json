{
    "manifest_version" : 2,
    "version": "1.0.0",
    "name" : "Water Reminder",
    "description" : "Reminds you to drink water",
    "icons" : {
        "128": "icon128.png"
    },
    "browser_action":{
        "default_popup": "index.html"
    },
    "background":{
        "scripts":["background.js"],
        "persistent":false
    },
    "permissions":[
        "alarms",
        "notifications"
    ]
}